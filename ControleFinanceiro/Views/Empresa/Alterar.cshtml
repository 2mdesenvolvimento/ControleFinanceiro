
@{
    Layout = "~/Views/Shared/_layout.cshtml";
}

@using (Html.BeginForm("Gravar", "Empresa", FormMethod.Post))
{
    <input type="hidden" name="cod_empresa" value="@ViewBag.cod_empresa" />
    <div class="form-group">
        <label>Nome da Empresa</label>
        <input class="form-control" placeholder="Digite aqui..." name="nome_empresa" value="@ViewBag.nome_empresa"/>
    </div>
    <div class="form-group">
        <label>Endereço</label>
        <input class="form-control" placeholder="Digite aqui..." name="endereco_empresa" value="@ViewBag.endereco_empresa" />
    </div>
    <div class="form-group">
        <label>Telefone</label>
        <input class="form-control" placeholder="Digite aqui..." name="telefone_empresa" value="@ViewBag.telefone_empresa" />
    </div>
    <button type="submit" class="btn btn-success">Salvar</button>
}

